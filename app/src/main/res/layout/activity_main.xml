<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/L1"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="#000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:id="@+id/R1"
        android:layout_marginBottom="5dp" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/E1"
            android:background="#FFFFFF"
            android:inputType="number"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/R3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/B1"
            android:text="1"
            android:textSize="40sp"
            android:background="#F7DC6F"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/B2"
            android:text="2"
            android:textSize="40sp"
            android:background="#F8C471"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/B3"
            android:text="3"
            android:textSize="40sp"
            android:background="#F0B27A"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btD"
            android:text="/"
            android:textSize="40sp"
            android:background="#E59866"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:weightSum="4"
        android:id="@+id/R4"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/B4"
            android:text="4"
            android:textSize="40sp"
            android:background="#F4D03F"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/B5"
            android:text="5"
            android:textSize="40sp"
            android:background="#F5B041"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/B6"
            android:text="6"
            android:textSize="40sp"
            android:background="#EB984E"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btM"
            android:text="*"
            android:textSize="40sp"
            android:background="#DC7633"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:weightSum="4"
        android:layout_weight="1"
        android:id="@+id/R5"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/B7"
            android:text="7"
            android:textSize="40sp"
            android:background="#F1C40F"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/B8"
            android:text="8"
            android:textSize="40sp"
            android:background="#F39C12"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/B9"
            android:text="9"
            android:textSize="40sp"
            android:background="#E67E22"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btS"
            android:text="-"
            android:textSize="40sp"
            android:background="#D35400"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:id="@+id/R6"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btC"
            android:text="C"
            android:textSize="40sp"
            android:background="#D4AC0D"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/B0"
            android:text="0"
            android:textSize="40sp"
            android:background="#D4AC0D"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btR"
            android:text="="
            android:textSize="40sp"
            android:background="#D68910"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btA"
            android:text="+"
            android:textSize="40sp"
            android:background="#BA4A00"

            />

    </LinearLayout>


</LinearLayout>
